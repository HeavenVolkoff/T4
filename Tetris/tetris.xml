<?xml version="1.0" encoding="UTF-8"?>
<project name="tetris" default="all">
  
  
  <property file="tetris.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/amd64"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.libs.classpath">
    <fileset dir="${basedir}/../../jmonkeyplatform/jmonkeyplatform/libs">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module Tetris -->
  
  <dirname property="module.tetris.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.tetris" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.tetris" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.tetris" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.tetris" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="tetris.output.dir" value="${module.tetris.basedir}/out/production/Tetris"/>
  <property name="tetris.testoutput.dir" value="${module.tetris.basedir}/out/test/Tetris"/>
  
  <path id="tetris.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="tetris.module.production.classpath">
    <path refid="${module.jdk.classpath.tetris}"/>
    <path refid="library.libs.classpath"/>
  </path>
  
  <path id="tetris.runtime.production.module.classpath">
    <pathelement location="${tetris.output.dir}"/>
    <path refid="library.libs.classpath"/>
  </path>
  
  <path id="tetris.module.classpath">
    <path refid="${module.jdk.classpath.tetris}"/>
    <pathelement location="${tetris.output.dir}"/>
    <path refid="library.libs.classpath"/>
  </path>
  
  <path id="tetris.runtime.module.classpath">
    <pathelement location="${tetris.testoutput.dir}"/>
    <pathelement location="${tetris.output.dir}"/>
    <path refid="library.libs.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.tetris">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.tetris">
    <patternset refid="excluded.from.module.tetris"/>
  </patternset>
  
  <path id="tetris.module.sourcepath">
    <dirset dir="${module.tetris.basedir}/Tetris">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.tetris" depends="compile.module.tetris.production,compile.module.tetris.tests" description="Compile module Tetris"/>
  
  <target name="compile.module.tetris.production" depends="register.custom.compilers" description="Compile module Tetris; production classes">
    <mkdir dir="${tetris.output.dir}"/>
    <javac2 destdir="${tetris.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tetris}/javac">
      <compilerarg line="${compiler.args.tetris}"/>
      <bootclasspath refid="tetris.module.bootclasspath"/>
      <classpath refid="tetris.module.production.classpath"/>
      <src refid="tetris.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.tetris"/>
    </javac2>
    
    <copy todir="${tetris.output.dir}">
      <fileset dir="${module.tetris.basedir}/Tetris/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.tetris.tests" depends="register.custom.compilers,compile.module.tetris.production" description="compile module Tetris; test classes" unless="skip.tests"/>
  
  <target name="clean.module.tetris" description="cleanup module">
    <delete dir="${tetris.output.dir}"/>
    <delete dir="${tetris.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.tetris" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.tetris" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>